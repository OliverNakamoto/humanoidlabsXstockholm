<?xml version="1.0"?>
<robot name="so101">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
    </visual>
  </link>

  <!-- Shoulder Pan Joint -->
  <joint name="shoulder_pan" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_pan_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="shoulder_pan_link">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.03"/>
      </geometry>
    </visual>
  </link>

  <!-- Shoulder Lift Joint -->
  <joint name="shoulder_lift" type="revolute">
    <parent link="shoulder_pan_link"/>
    <child link="shoulder_lift_link"/>
    <origin xyz="0 0 0.08" rpy="1.57 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="shoulder_lift_link">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.025"/>
      </geometry>
    </visual>
  </link>

  <!-- Elbow Flex Joint -->
  <joint name="elbow_flex" type="revolute">
    <parent link="shoulder_lift_link"/>
    <child link="elbow_flex_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="elbow_flex_link">
    <visual>
      <geometry>
        <cylinder length="0.12" radius="0.025"/>
      </geometry>
    </visual>
  </link>

  <!-- Wrist Flex Joint -->
  <joint name="wrist_flex" type="revolute">
    <parent link="elbow_flex_link"/>
    <child link="wrist_flex_link"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
  </joint>

  <link name="wrist_flex_link">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <!-- Wrist Roll Joint -->
  <joint name="wrist_roll" type="revolute">
    <parent link="wrist_flex_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="5" velocity="1.0"/>
  </joint>

  <link name="wrist_roll_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.02"/>
      </geometry>
    </visual>
  </link>

  <!-- Gripper Frame (End Effector) -->
  <joint name="gripper_joint" type="fixed">
    <parent link="wrist_roll_link"/>
    <child link="gripper_frame_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <link name="gripper_frame_link">
    <visual>
      <geometry>
        <box size="0.05 0.08 0.02"/>
      </geometry>
    </visual>
  </link>
</robot>